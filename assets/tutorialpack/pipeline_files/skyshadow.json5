{
  // Don't change this name
  skyShadows: {
    framebuffer: "shadow",
    allowEntities: true,
    allowParticles: true,
    supportForwardRender: true,
    vertexSource: "tutorialpack:shaders/gbuffer/shadow.vert",
    fragmentSource: "tutorialpack:shaders/gbuffer/shadow.frag",
    offsetSlopeFactor: 1.1,
    offsetBiasUnits: 4.0,
    cascadeRadius: [
      {
        optionMap: {
          shadow_resolution: [
            { from: "512", to: 64 },
            { from: "1024", to: 64 },
            { from: "2048", to: 64 },
            { from: "4096", to: 48 },
            { from: "8192", to: 48 },
            { from: "16384", to: 3 }
          ]
        }
      },
      {
        optionMap: {
          shadow_resolution: [
            { from: "512", to: 32 },
            { from: "1024", to: 32 },
            { from: "2048", to: 32 },
            { from: "4096", to: 16 },
            { from: "8192", to: 16 },
            { from: "16384", to: 8 }
          ]
        }
      },
      {
        optionMap: {
          shadow_resolution: [
            { from: "512", to: 8 },
            { from: "1024", to: 8 },
            { from: "2048", to: 8 },
            { from: "4096", to: 4 },
            { from: "8192", to: 4 },
            { from: "16384", to: 2 }
          ]
        }
      }
    ]
  },
  images: [
    // depth attachment for shadow map
    {
      name: "shadow_map",
      size: {
        default: 1024,
        optionMap: {
          shadow_resolution: [
            { from: "512", to: 512 },
            { from: "1024", to: 1024 },
            { from: "2048", to: 2048 },
            { from: "4096", to: 4096 },
            { from: "8192", to: 8192 },
            { from: "16384", to: 16384 }
          ]
        }
      },
      internalFormat: "DEPTH_COMPONENT32",
      pixelFormat: "DEPTH_COMPONENT",
      pixelDataType: "FLOAT",
      target: "TEXTURE_2D_ARRAY",
      depth: 4,
      texParams: [
        { name: "TEXTURE_MIN_FILTER", val: "LINEAR" },
        { name: "TEXTURE_MAG_FILTER", val: "LINEAR" },
        { name: "TEXTURE_WRAP_S", val: "CLAMP_TO_EDGE" },
        { name: "TEXTURE_WRAP_T", val: "CLAMP_TO_EDGE" },
        { name: "TEXTURE_COMPARE_MODE", val: "COMPARE_REF_TO_TEXTURE" },
        { name: "TEXTURE_COMPARE_FUNC", val: "LEQUAL" }
      ]
    }
  ],
  framebuffers: [
    {
      name: "shadow",
      depthAttachment: { image: "shadow_map", clearDepth: 1.0 }
    }
  ],
  sky: {
    defaultZenithAngle: 0
  }
}